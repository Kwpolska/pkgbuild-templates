# Maintainer: Kwpolska <kwpolska@kwpolska.tk>
pkgname=python-tEmplate-git
_pyname=tEmplate
_gitname=tEmplate
pkgver=20130109
pkgrel=1
pkgdesc='INSERT DESCRIPTION HERE.  (git version)'
arch=('any')
url='http://tEmplate.com/'
license=('???')
depends=('python')
makedepends=('git')
options=(!emptydirs)
provides=('python-tEmplate')
conflicts=('python-tEmplate')
source=("git://github.com/AUTHOR/${_gitname}.git")
md5sums=('SKIP')

package() {
  cd "${srcdir}/${_gitname}"
  python3 setup.py install --root="${pkgdir}/" --optimize=1
  install -D -m644 LICENSE "${pkgdir}/usr/share/licenses/${pkgname}/LICENSE"
}

pkgver() {
  cd "${srcdir}/${_gitname}"
  git describe --always | sed 's/-/_/g;s/v//'
}

# vim:set ts=2 sw=2 et:
